<?php
Login::restrictFront();
$objForm = new Form();
$objValid = new Validation($objForm);

if($objForm->isPost('first_name')){
    $objValid->_expected = array(
        'first_name',
        'last_name',
        'address_1',
	'address_2',
	'town',
	'county',
        'country',
	'post_code',
	'email'
    );
    
    
    $objValid->_required = array(
        'first_name',
        'last_name',
        'address_1',
	'town',
	'county',
        'country',
	'post_code',
	'email'
    );
    
    $objValid->_special = array(
        'email' => 'email'
    );
    
    
    if($objValid->isValid()){
        
    }
		
}

require_once('_header.php');



?>



